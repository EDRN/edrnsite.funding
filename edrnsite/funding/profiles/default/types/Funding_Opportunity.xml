<object name='Funding Opportunity' meta_type='Factory-based Type Information with dynamic views'
    i18n:domain='edrnsite.funding' xmlns:i18n='http://xml.zope.org/namespaces/i18n'>
    <property name='title' i18n:translate=''>Funding Opportunity</property>
    <property name='description' i18n:translate=''>A funding opportunity is a chance at grabbing some funding.</property>
    <property name='content_icon'>++resource++funding-opportunity.gif</property>
    <property name='content_meta_type'>Funding Opportunity</property>
    <property name='product'>edrnsite.funding</property>
    <property name='factory'>addFundingOpportunity</property>
    <property name='immediate_view'>atct_edit</property>
    <property name='global_allow'>False</property>
    <property name='filter_content_types'>True</property>
    <property name='allowed_content_types'>
        <element value='Announcement'/>
    </property>
    <property name='allow_discussion'>False</property>
    <property name='default_view'>view</property>
    <property name='view_methods'>
        <element value='view'/>
        <element value='folder_summary_view'/>
        <element value='folder_tabular_view'/>
        <element value='folder_listing'/>
    </property>
    
    <alias from='(Default)' to='(dynamic view)'/>
    <alias from='edit'      to='atct_edit'/>
    <alias from='sharing'   to='@@sharing'/>
    <alias from='view'      to='(selected layout)'/>

    <action title='View' action_id='view' category='object' condition_expr='' url_expr='string:${folder_url}/' visible='True'>
        <permission value='View'/>
    </action>
    <action title='Edit' action_id='edit' category='object' condition_expr='' url_expr='string:${object_url}/edit' visible='True'>
        <permission value='Modify portal content'/>
    </action>
</object>
